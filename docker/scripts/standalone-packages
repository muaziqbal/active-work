export DEBIAN_FRONTEND=noninteractive
apt-get update
apt-get install -y python2.7 python-docutils \
                   supervisor python-pip && \
apt-get -y clean
pip install supervisor-stdout
rm -rf /var/lib/apt/lists/*
rm -rf /usr/share/doc/
rm -rf /usr/share/man/
rm -rf /usr/share/locale/
rm -rf /var/log/*

mkdir -p /var/log/supervisor
chgrp -R 0 /etc/supervisor /var/log/supervisor
chmod -R g=u /etc/supervisor /var/log/supervisor
