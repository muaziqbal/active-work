$font-family-sans-serif: "Inter" !default;
$font-family-base: $font-family-sans-serif !default;

@import "inter/inter";
@import "variables";

@import "bootstrap";
@import "bootswatch";

@import "font-awesome-sprockets";
@import "font-awesome";

@import "diagram";
@import "jobs";
@import "tables";
@import "workflows";
