// Tweaks

.radio-inline {
  margin-right: 0.6rem;
  input {
  margin-right: 0.2rem;
  }
}

.flash.alert:empty {
    display: none;
}

// Fix Firefox and Chrome outlines on focused navs.
nav .nav-item .nav-link:focus,
.dropdown-menu .dropdown-item:focus
{
  outline: none;
}

.hidden {
  display: none;
}

#main {
  padding-top: 2rem;
  padding-bottom: 2rem;
}

.page-header {
  @extend .mb-3;
}

#ace-credential-value {
  width: 100%;
  height: 10rem;
  position: relative;
}

#ace-agent-options {
  width: 100%;
  height: 10rem;
  position: relative;
}

#ace-payload-editor {
  width: 100%;
  height: 10rem;
  position: relative;
}

.ace-merge-options-editor {
  width: 100%;
  position: relative;
}

#agent_options {
  display: none;
}

.sample-payload {
  display: none;
}

.message-payload {
  @extend .text-monospace;
  padding: 0em 1em;
  @extend .rounded;
  background: #fff;
  color: #000;

  &.truncated {
    height: 2rem;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    word-wrap: normal;

    width: 10rem;
    @include media-breakpoint-up(md){
      width: 20rem;
    }
    @include media-breakpoint-up(lg){
      width: 30rem;
    }
    @include media-breakpoint-up(xl){
      width: 40rem;
    }
  }
}

.ace_editor {
  height: 10rem;
  @extend .rounded;
  font-family: $font-family-monospace !important;
  font-size: $font-size-sm !important;
}

a.navbar-brand img {
  padding-top: 0;
  padding-bottom: 0;
  display: inline-block;
  height: 1rem;
}

.pagination li {
  @extend .page-item;
  a {
    @extend .page-link;
  }
}

// Errors
#error_explanation {
  @extend .alert;
  @extend .alert-danger;
}

.field_with_errors .form-control {
  @extend .is-invalid;
}
// Hack to show feedback for fields with errors, uses sibling selector.
.field_with_errors ~ .invalid-feedback {
  display: block;
}



// Select2 fixes

.select2 {
  float: none !important;
  margin-left: 0 !important;
}

.select2-container .select2-choices .select2-search-field input, .select2-container .select2-choice, .select2-container .select2-choices {
  font-family: $font-family-base !important;
}

.select2-container-multi .select2-choices li.select2-search-choice {
  background: $primary !important;
}

.select2-drop a {
  color: $blue !important;
}

.select2-highlighted a {
  color: $yellow !important;
}

.link-region .cannot-receive-messages,
.schedule-region .cannot-be-scheduled {
  display: none;
}

// Disabled

.agent-unavailable {
  opacity: 0.5;
}

#agent-spinner {
  display: none;
}

.not-applicable {
  // TODO
}

$service-colors: (
  twitter:      #55acee,
  37signals:    #8fc857,
  github:       #444444,
  dropbox:      #007EE5,
  evernote:     #00C85A
);

@mixin services {
  @each $service, $color in $service-colors {
    &.service-#{$service} {
      color: #fff;
      background-color: $color;
    }
  }
}

.btn-service {
  position: relative;
  padding-left: 40px;
  $border-color: rgba(0,0,0,0.2);
  border-color: $border-color;

  > i:first-child {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    width: 32px;
    height: 32px;
    text-align: center;
    line-height: 32px;
    font-size: 24px;
    border-right: 1px solid $border-color;
  }

  @include services;
}

h1 .badge {
  text-shadow: none;
}

.badge-service {
  @include services;
}

.select2-highlighted a {
  color: yellow;
  text-decoration: underline;
}

.icon-flipped {
  -ms-transform: translateZ(0);
  -webkit-transform: translateZ(0);
  transform: translateZ(0);
  -ms-transform: scaleX(-1);
  -webkit-transform: scaleX(-1);
  transform: scaleX(-1);
}
