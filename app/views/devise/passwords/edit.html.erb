<% content_for :title, "Change password" -%>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="logo">
        <i>
          <%= image_tag("AW-Logo.svg", alt: "ActiveWorkflow") %>
        </i>
      </div>
    </div>
  </div>

  <div class="row d-flex justify-content-center">
    <div class="col-md-5">
      <h1>Change your password</h1>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>
        <%= render 'devise/shared/error_messages', resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="control-group">
          <%= f.label :password, "New password", class: 'control-label' %>
          <div class="controls">
            <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'span4' %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :password_confirmation, "Confirm new password" %>
          <div class="controls">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'span4' %>
          </div>
        </div>

        <div class='form-actions'>
          <%= f.submit "Change my password", class: "btn btn-primary btn-md" %>
        </div>
      <% end %>

      <div class="shared-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
