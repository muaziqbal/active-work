<% content_for :title, "Reset password" -%>

<div class="container">
  <div class='row'>
    <div class='col-md-4'>
      <div class='page-header'>
        <h1>Forgot your password?</h1>
      </div>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
        <%= render 'devise/shared/error_messages', resource: resource %>

        <div class="form-group">
          <%= f.label :login, :class => 'control-label' %>
          <div>
            <%= f.text_field :login, autofocus: true, :class => 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <div>
            <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      <% end %>

      <hr>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
