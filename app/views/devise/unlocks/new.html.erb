<% content_for :title, "Resend unlock code" -%>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="logo">
        <i>
          <%= image_tag("AW-Logo.svg", alt: "ActiveWorkflow") %>
        </i>
      </div>
    </div>
  </div>

  <div class="row d-flex justify-content-center">
    <div class="col-md-5">
      <h1>Resend unlock instructions</h1>

      <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
        <%= render 'devise/shared/error_messages', resource: resource %>

        <div class="form-group">
         <%= f.label :login, class: 'control-label' %>
          <div>
            <%= f.text_field :login, autofocus: true, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <div>
            <%= f.submit "Resend unlock instructions", class: "btn btn-primary btn-md" %>
          </div>
        </div>
      <% end %>

      <div class="shared-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
